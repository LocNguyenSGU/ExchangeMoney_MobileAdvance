<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biểu đồ tỷ giá"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        android:gravity="center"/>

    <!-- LinearLayout chứa Spinner đầu tiên, mũi tên, và Spinner thứ hai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <!-- Spinner chọn tiền tệ ban đầu -->
        <Spinner
            android:id="@+id/spinnerFromCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spiner_boder"/>

        <!-- Mũi tên chỉ xuống -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="24sp"
            android:textColor="#888888" />

        <!-- Spinner chọn tiền tệ muốn chuyển đổi -->
        <Spinner
            android:id="@+id/spinnerToCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/spiner_boder"/>
    </LinearLayout>

    <!-- Nút hiển thị biểu đồ -->
    <Button
        android:id="@+id/buttonShowChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị biểu đồ"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#3F51B5"
        android:layout_marginBottom="30dp"
        android:padding="12dp" />

    <LinearLayout
        android:id="@+id/noDataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <!-- Bạn có thể thay thế TextView này bằng một hình ảnh nếu muốn -->
        <TextView
            android:id="@+id/noDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có dữ liệu cho ngày này"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"/>

        <!-- Bạn có thể thêm hình ảnh minh họa (icon lỗi) nếu muốn -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_data_image" />
    </LinearLayout>

    <!-- Biểu đồ sẽ được hiển thị ở đây -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"/>

    <!-- Progress bar hiển thị khi tải dữ liệu -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <!-- 4 Button cố định dưới màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đổi tiền"
            android:textColor="#FFFFFF"
            android:background="#3F51B5"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnExchangeRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tỷ giá"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnDiagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Biểu đồ"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>